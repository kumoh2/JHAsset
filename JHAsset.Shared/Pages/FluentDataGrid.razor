@page "/fluent-grid"
@inject IAssetService AssetService

<h3>Fluent UI DataGrid (자산 목록)</h3>

<FluentDataGrid Items="@AssetList" Class="fui-datagrid" GenerateHeader="true" GridLines="DataGridGridLines.Horizontal">
    <!-- 자동 컬럼 생성 (GenerateHeader="true"), 또는 아래처럼 명시적 컬럼을 정의할 수도 있음
    <FluentDataGridColumn PropertyName="Name" Title="자산명" />
    <FluentDataGridColumn PropertyName="Category" Title="대분류" />
    ... 
    -->
</FluentDataGrid>

@if (AssetList?.Count == 0)
{
    <p>등록된 자산이 없습니다.</p>
}

@code {
    private List<Asset>? AssetList;

    protected override async Task OnInitializedAsync()
    {
        AssetList = await AssetService.GetAllAsync();
    }
}
